<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service
            id="font_crawler.crawler.repository.host"
            class="FontCrawler\CrawlerBundle\Document\HostRepository">
        </service>

        <service
            id="dom_crawler"
            class="Symfony\Component\DomCrawler\Crawler"
        />

        <service
            id="buzz.browser"
            class="Buzz\Browser"
        />

        <service
            id="font_crawler.crawler.font_factory"
            class="FontCrawler\CrawlerBundle\FontFactory">
            <argument type="service" id="dom_crawler" />
            <argument type="service" id="font_crawler.crawler" />
            <argument type="service" id="buzz.browser" />
        </service>

        <service
            id="font_crawler.crawler"
            class="FontCrawler\CrawlerBundle\Util\Crawler">
        </service>
    </services>
</container>
