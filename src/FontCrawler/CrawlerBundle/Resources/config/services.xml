<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service
            id="font_crawler.crawler.repository.host"
            class="FontCrawler\CrawlerBundle\Document\HostRepository">
        </service>

        <service
            id="dom_crawler"
            class="Symfony\Component\DomCrawler\Crawler"
        />

        <service
            id="buzz.browser"
            class="Buzz\Browser"
        />

        <!--
        <service
            id="font_crawler.crawler.file_factory"
            class="FontCrawler\CrawlerBundle\FileFactory">
            <argument type="service" id="dom_crawler" />
            <argument type="service" id="font_crawler.crawler" />
            <argument type="service" id="buzz.browser" />
        </service>
        -->

        <service
            id="font_crawler.crawler.filter.rule"
            class="FontCrawler\CrawlerBundle\Filter\RuleFilter"
        />

        <service
            id="font_crawler.crawler.filter.attribute"
            class="FontCrawler\CrawlerBundle\Filter\AttributeFilter"
        />

        <service
            id="font_crawler.crawler.filter.url"
            class="FontCrawler\CrawlerBundle\Filter\UrlFilter"
        />

        <service
            id="font_crawler.crawler.filter.font_face"
            class="FontCrawler\CrawlerBundle\Filter\FontFaceFilter"
        />

        <service
            id="font_crawler.crawler"
            class="FontCrawler\CrawlerBundle\Crawler">
            <argument type="collection">
                <argument type="service" id="font_crawler.crawler.filter.rule" />
                <argument type="service" id="font_crawler.crawler.filter.attribute" />
                <argument type="service" id="font_crawler.crawler.filter.url" />
                <argument type="service" id="font_crawler.crawler.filter.font_face" />
            </argument>
        </service>
    </services>
</container>
